<?xml version="1.0" encoding="utf-8"?>
<zame.game.views.PreLevelView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/RootZameView"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:paddingTop="15dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingBottom="15dp"
		android:background="@drawable/endl_back"
	>
		<ScrollView
			android:id="@+id/ScrollWrap"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_above="@+id/BtnStartLevel"
			android:layout_toRightOf="@+id/ImgImage"
			android:layout_marginBottom="10dp"
			android:scrollbars="vertical"
			android:fadeScrollbars="false"
		>
			<TextView
				android:id="@+id/TxtText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="5dp"
				style="@style/PreLevelText"
			/>
		</ScrollView>
		<ImageView
			android:id="@+id/ImgImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:paddingTop="5dp"
			android:paddingRight="10dp"
		/>
		<Button
			android:id="@+id/BtnStartLevel"
			android:text="@string/btn_continue"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			style="@style/EndLevelButton"
		/>
	</RelativeLayout>
</zame.game.views.PreLevelView>
